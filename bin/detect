#!/usr/bin/env bash
# bin/use <build-dir>

# Fail fast
set -e

BUILD_DIR=$1
echo "Info: BUILD_DIR=${BUILD_DIR}"

FILETREE_FILE=`find $BUILD_DIR -maxdepth 2 -name .filetree -print -quit`

if [ -e "$FILETREE_FILE" ]; then
    echo "Squeak (Filetree)" && exit 0
else
    echo "Not a Squeak build directory" && exit 1
fi